{
  "name": "react-reload",
  "version": "0.1.4",
  "description": "Yet another declarative data loader for React",
  "license": "MIT",
  "repository": "github:c58/react-reload",
  "bugs": "https://github.com/c58/react-reload/issues",
  "keywords": [
    "redux",
    "react",
    "declarative",
    "predictable",
    "functional",
    "loader",
    "fetch"
  ],
  "authors": [
    "Artem Artemev <artem@artemevs.com> (https://github.com/c58)"
  ],
  "main": "lib/react-reload.js",
  "unpkg": "dist/react-reload.js",
  "module": "es/react-reload.js",
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" \"**/*.md\"",
    "format:check": "prettier --list-different \"{src,test}/**/*.{js,ts}\" \"**/*.md\"",
    "lint": "eslint src",
    "flow": "flow check --max-warnings 0",
    "pretest": "npm run flow && npm run build",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "build": "rollup -c",
    "prepare": "npm run clean && npm run format:check && npm run lint && npm test",
    "release": "release-it"
  },
  "dependencies": {
    "create-react-context": "^0.3.0",
    "shallowequal": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-transform-flow-strip-types": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@release-it/conventional-changelog": "^1.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-transform-async-to-promises": "^0.8.12",
    "cross-env": "^5.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^5.16.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "flow-bin": "^0.101.1",
    "flow-typed": "^2.5.2",
    "glob": "^7.1.4",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "release-it": "^12.3.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.16.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-copy": "^3.0.0"
  },
  "npmName": "react-reload",
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js",
        "*.js.flow"
      ]
    }
  ],
  "jest": {
    "testRegex": "(/src/.*\\.spec\\.js)$",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "sideEffects": false,
  "release-it": {
    "github": {
      "release": true
    },
    "scripts": {
      "beforeStart": "npm test"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
